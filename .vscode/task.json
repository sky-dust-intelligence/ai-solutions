{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript Compiler",
      "type": "shell",
      "command": "tsc",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
{
  "label": "TSLint Auto Fix",
  "type": "shell",
